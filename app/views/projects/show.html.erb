<h1>Project: <%= @project.name %></h1>

<%if @project.employees.any?%>
<br>
<ul>
  <%@project.employees.each do |employee|%>
  <li><%= link_to employee.name, employee_path(employee)%></li>
  <%end%>
</ul>
<%else%>
<p>No employees to display.</p>
<%end%>
<p><%= link_to "Edit project", edit_project_path(@project)%></p>
<p><%= link_to "Delete project", project_path(@project),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %></p>
